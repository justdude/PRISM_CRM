<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">

	
	<Style x:Key="btnStyle" TargetType="{x:Type Button}" BasedOn="{StaticResource {x:Type Button}}">
		<Setter Property="VerticalAlignment" Value="Center"></Setter>
		<Setter Property="HorizontalAlignment" Value="Stretch"></Setter>
		<Setter Property="Margin" Value="4,0,0,0"></Setter>
		<Setter Property="Height" Value="22"></Setter>
		<Setter Property="Width" Value="38"></Setter>
	</Style>
	
	<ControlTemplate x:Key="tmplButtonsContent" TargetType="{x:Type ContentControl}">
		<StackPanel>
			<Grid>
				<Grid.ColumnDefinitions>
					<ColumnDefinition></ColumnDefinition>
					<ColumnDefinition></ColumnDefinition>
					<ColumnDefinition></ColumnDefinition>
					<ColumnDefinition></ColumnDefinition>
					<ColumnDefinition></ColumnDefinition>
				</Grid.ColumnDefinitions>
				<Button Grid.Column="0" Style="{StaticResource btnStyle}" Command="{Binding RefreshCommand}">Refresh</Button>
				<Button Grid.Column="1" Style="{StaticResource btnStyle}" Command="{Binding AddCommand}">New</Button>
				<Button Grid.Column="2" Style="{StaticResource btnStyle}" Command="{Binding DeleteCommand}">Delete</Button>
				<Button Grid.Column="3" Style="{StaticResource btnStyle}" Command="{Binding SaveCommand}">Save</Button>
				<Button Grid.Column="4" Style="{StaticResource btnStyle}" Command="{Binding CloseCommand}">Close</Button>
			</Grid>
		</StackPanel>
	</ControlTemplate>

	<Style x:Key="txtblStyle" TargetType="{x:Type TextBlock}" BasedOn="{StaticResource {x:Type TextBlock}}">
		<Setter Property="VerticalAlignment" Value="Center"></Setter>
		<Setter Property="Margin" Value="2,0,0,0"></Setter>
	</Style>

	<Style x:Key="baseStyle" TargetType="{x:Type FrameworkElement}">
		<Setter Property="VerticalAlignment" Value="Center"></Setter>
		<Setter Property="HorizontalAlignment" Value="Stretch"></Setter>
		<Setter Property="Margin" Value="4,0,0,0"></Setter>
		<Setter Property="Height" Value="22"></Setter>
	</Style>
	
	<ControlTemplate x:Key="tbError">
		<StackPanel>
			<!-- Placeholder for the TextBox itself -->
			<AdornedElementPlaceholder x:Name="textBox"/>
			<TextBlock Text="{Binding [0].ErrorContent}" Foreground="Red"/>
		</StackPanel>
	</ControlTemplate>

</ResourceDictionary>