<Window x:Class="CRM.View.EmployeeShell"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
		xmlns:prism="http://www.codeplex.com/prism"
        Title="Employers" Height="300" Width="300">
	<Grid x:Name="LayoutRoot" Style="{StaticResource grdStyle}">
		<Grid.RowDefinitions>
			<RowDefinition Height="*"></RowDefinition>
			<RowDefinition Height="22"></RowDefinition>
		</Grid.RowDefinitions>
		<ContentControl Grid.Row="1"
						prism:RegionManager.RegionName="EmployeeModule"></ContentControl>
		<StatusBar Grid.Row="1">
			<StatusBarItem>
				<TextBlock Text="Info"></TextBlock>
			</StatusBarItem>
		</StatusBar>
	</Grid>
</Window>
